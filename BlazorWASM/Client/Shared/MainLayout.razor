@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Transparent" Fixed="false">
        <MudButton Href="/">
            <MudImage Height="40" Width="40" Src="tritonSpinGeisel.png" Alt="tritonSpinBike" />
            <MudText Typo="Typo.h5">TritonBikeWatch</MudText>
        </MudButton>
        <MudSpacer />
        <MudButton Href="/dashboard">Dashboard</MudButton>
        <MudButton Href="/adminPanel">Admin Panel</MudButton>
        <MudSpacer />
        <LoginDisplay />
        <MudSpacer />
        <MudTooltip Text="GitHub Repository">
            <MudIconButton Target="_blank" Href="https://github.com/jiamingqiu-jimmy/TritonBikeWatch" Icon="@Icons.Custom.Brands.GitHub" aria-label="github" Color="Color.Primary"></MudIconButton>
        </MudTooltip>
    </MudAppBar>
    <MudMainContent Class="pt-12 pb-12">
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>